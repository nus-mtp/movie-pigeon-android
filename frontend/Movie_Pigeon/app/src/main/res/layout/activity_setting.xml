<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Spinner
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:entries="@array/updateUserInfo"
        android:id="@+id/popupTitle"/>

    <EditText
        android:layout_centerHorizontal="true"
        android:layout_width="275dp"
        android:layout_height="25dp"
        android:id="@+id/popupUserUpdate"
        android:cursorVisible="true"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/popupTitle"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:background="@color/colorEditTextGrey"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Confirm"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:id="@+id/popupButtonConfirm"
        android:layout_below="@+id/popupUserUpdate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="@android:color/holo_blue_dark" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Cancel"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:id="@+id/popupButtonCancel"
        android:layout_below="@+id/popupButtonConfirm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@android:color/holo_blue_dark" />



</RelativeLayout>