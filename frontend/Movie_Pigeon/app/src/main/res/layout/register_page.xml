<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Username: "
        android:textColor="#000000"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="35dp"
        android:id="@+id/rTVUsername"
        />

    <EditText
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:id="@+id/rETUsername"
        android:cursorVisible="true"
        android:textSize="13dp"
        android:textColor="#000000"
        android:layout_below="@+id/rTVUsername"
        android:layout_alignStart="@+id/rTVUsername"
        android:inputType="text"
        android:background="@color/colorEditTextGrey"
        android:layout_height="20dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Email: "
        android:textColor="#000000"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="35dp"
        android:id="@+id/rTVEmail"
        android:layout_below="@+id/rETUsername"
        android:layout_alignStart="@+id/rETUsername"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Password: "
        android:textColor="#000000"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="35dp"
        android:id="@+id/rTVPassword"
        android:layout_below="@+id/rETEmail"
        android:layout_alignStart="@+id/rETEmail"
        />

    <EditText
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:id="@+id/rETPassword"
        android:textColor="#000000"
        android:cursorVisible="true"
        android:textSize="13dp"
        android:layout_below="@+id/rTVPassword"
        android:layout_alignStart="@+id/rTVPassword"
        android:inputType="textPassword"
        android:background="@color/colorEditTextGrey"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Confirm Password: "
        android:textColor="#000000"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="35dp"
        android:id="@+id/rTVConfirmPassword"
        android:layout_below="@+id/rETPassword"
        android:layout_alignStart="@+id/rETPassword"
        />

    <EditText
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:id="@+id/rETConfirmPassword"
        android:textColor="#000000"
        android:cursorVisible="true"
        android:textSize="13dp"
        android:layout_below="@+id/rTVConfirmPassword"
        android:layout_alignStart="@+id/rTVConfirmPassword"
        android:inputType="textPassword"
        android:background="@color/colorEditTextGrey"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textColor="#FFFFFF"
        android:text="Back"
        android:id="@+id/rpBackButton"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:layout_below="@+id/rpRegisterButton"
        android:layout_alignStart="@+id/rpRegisterButton"
        android:layout_marginTop="18dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textColor="#FFFFFF"
        android:text="Register"
        android:id="@+id/rpRegisterButton"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/rETConfirmPassword"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="200dp"
        android:textColor="#000000"
        android:layout_height="20dp"
        android:id="@+id/rETEmail"
        android:cursorVisible="true"
        android:textSize="13dp"
        android:inputType="text"
        android:background="@color/colorEditTextGrey"
        android:layout_below="@+id/rTVEmail"
        android:layout_alignStart="@+id/rTVEmail" />
</RelativeLayout>